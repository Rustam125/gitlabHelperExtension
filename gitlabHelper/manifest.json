{
    "manifest_version": 3,
    "name": "GitLab Helper",
    "version": "1.0",
    "description": "Помощник для работы с GitLab",
    "author": "Garaev Rustam",
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "scripting"
    ],
    "host_permissions": [
        "https://gitlab.example.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "GitLab Helper"
    },
    "content_scripts": [{
        "matches": ["https://gitlab.example.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
    }],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}